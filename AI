<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI-Powered Resume Generator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }
        header {
            background-color: #333;
            color: #fff;
            padding: 1rem 2rem;
            text-align: center;
        }
        main {
            margin: 2rem;
        }
        .layout {
            border: 1px solid #ccc;
            padding: 1rem;
            margin: 1rem 0;
            cursor: pointer;
        }
        .layout:hover {
            background-color: #e8e8e8;
        }
        textarea {
            width: 100%;
            height: 100px;
            margin: 1rem 0;
        }
        .button {
            padding: 0.5rem 1rem;
            background-color: #007BFF;
            color: #fff;
            border: none;
            cursor: pointer;
        }
        .button:hover {
            background-color: #0056b3;
        }
        .output {
            background-color: #fff;
            border: 1px solid #ccc;
            padding: 1rem;
            margin: 1rem 0;
        }
    </style>
</head>
<body>
    <header>
        <h1>AI-Powered Resume Generator</h1>
    </header>
    <main>
        <h2>Select a Layout:</h2>
        <div id="layouts">
            <div class="layout" data-layout="basic">Basic Layout</div>
            <div class="layout" data-layout="modern">Modern Layout</div>
            <div class="layout" data-layout="creative">Creative Layout</div>
        </div>

        <h2>Input Resume Content:</h2>
        <textarea id="inputText" placeholder="Enter your raw resume data here..."></textarea>
        <button class="button" id="generateButton">Generate Resume</button>

        <h2>Generated Resume:</h2>
        <div id="output" class="output"></div>
    </main>

    <script>
        const layouts = document.querySelectorAll('.layout');
        let selectedLayout = '';

        layouts.forEach(layout => {
            layout.addEventListener('click', () => {
                layouts.forEach(l => l.style.border = '1px solid #ccc');
                layout.style.border = '2px solid #007BFF';
                selectedLayout = layout.dataset.layout;
            });
        });

        document.getElementById('generateButton').addEventListener('click', async () => {
            const inputText = document.getElementById('inputText').value;

            if (!selectedLayout) {
                alert('Please select a layout!');
                return;
            }

            if (!inputText.trim()) {
                alert('Please enter some resume data!');
                return;
            }

            const response = await fetch('https://api.example.com/generate-resume', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    layout: selectedLayout,
                    content: inputText
                })
            });

            const data = await response.json();

            document.getElementById('output').innerHTML = data.generatedResume;
        });
    </script>
</body>
</html>
